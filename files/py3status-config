# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    color_good = "#6298e0"
    color_bad = "#ff3434"
    color_degraded = "#faffff"
    output_format = i3bar
 
}

order += "group network"
order += "net_rate"
order += "volume_status"
order += "backlight"
order += "battery all"
order += "arch_updates"
order += "tztime local"


group network {
    cycle=0    
    format = "{output}"
    wireless _first_ {
        format_up = "W: (%quality at %essid)"
        format_down = "W: DOWN"
    }

    ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: DOWN"
    }
}

net_rate{
        format = "{down}{up}"
}

battery all {
    format = "%status%percentage(%remaining %consumption)"
    format_down = "No battery"
    status_chr = "CHR: "
    status_bat = "BAT: "
    status_unk = "UNK"
    status_full = "FULL: "
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 20
    last_full_capacity = true
    integer_battery_capacity = true

}

tztime local {
    format = "%H:%M:%S %Y-%m-%d"
}

volume_status {
    format = '{percentage}%'
    format_muted = 'muted'
    mixer = "Master"
    command = "pactl"
    maxvolume=100
}

backlight {
    format ='{level}%'
	brightness_delta = 5
	low_tune_threshold = 10
}
